<style>
	html {
		font-family: "Noto Sans";
		font-size: 20px;
		font-weight: 300;
		animation: html 2s infinite alternate;
		max-width: 800px;
		padding-inline: 1.5rem;
		margin-inline: auto;
		background-color: white;
	}

	main {
		display: grid;
		grid-template-columns: 1fr 1fr;
		width: 80%;
		gap: 1rem;
		margin: auto;
		container-type: block-size;
	}
	main > div {
		aspect-radio: 1;
		width: 100%;
		height: 50cqi;
	}

	[lang="zh-Hans"] {
		writing-mode: vertical-lr;
	}

	nav {
		display: flex;
		width: 80%;
		gap: 8rem;
		margin: auto;
		justify-content: center;
		padding-inline: 1.5rem;
		margin-inline: auto;
	}

	.nav-item {
		display: grid;
		text-decoration: none;
		filter: contrast(4);
		background: #fff;
		color: #000;
	}

	.nav-item > * {
		grid-column-start: 1;
		grid-row-start: 1;
		justify-self: center;
		align-self: center;
		position: relative;
		display: block;
		transition: all 2s ease-in-out;
	}

	.nav-item > [lang="zh-Hans"] {
	}

	.nav-item > [lang="en-US"] {
		opacity: 0.25;
		filter: blur(0.1em);
	}
	.nav-item > [lang="zh-Hans"] {
		opacity: 1;
		filter: blur(0);
	}
	.nav-item:hover > [lang="en-US"] {
		opacity: 1;
		filter: blur(0);
	}
	.nav-item:hover > [lang="zh-Hans"] {
		opacity: 0.25;
		filter: blur(0.1em);
	}

	.exhibition-title {
		font-family: "Noto Sans";
		font-weight: 200;
		color: white;
		position: fixed;
		display: flex;
		height: 200px;
		margin-top: 230px;
		justify-content: center;
		align-items: center;
		text-align: center;
		font-size: 3rem;
		mix-blend-mode: difference;
	}

	.exhibition-title {
		--shadow-color: grey;
		text-shadow:
			-1px 1px 0 var(--shadow-color),
			-2px 2px 0 var(--shadow-color),
			-3px 3px 0 var(--shadow-color),
			-4px 4px 0 var(--shadow-color),
			-5px 5px 0 var(--shadow-color),
			-6px 6px 0 var(--shadow-color),
			-7px 7px 0 var(--shadow-color),
			-8px 8px 0 var(--shadow-color),
			-9px 9px 0 var(--shadow-color),
			-10px 10px 0 var(--shadow-color);
	}

	::selection {
		color: white;
		background: grey;
	}
	/* 2. Mix-blend-mod */
</style>
